@import 'styles/colors.pcss';

.root{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  & h4{
    font-size: 10vw;
    line-height: 10vw;
    font-weight: 700;
    margin-bottom: 2vw;
    color: var(--green);
    text-align: center;
  }
  & p{
    font-size: 3vw;
    line-height: 3vw;
    text-align: center;
  }
}